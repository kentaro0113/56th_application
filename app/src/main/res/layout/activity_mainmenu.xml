<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/red"
            android:padding="4dp"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/mainTITLE"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/buttonMenuSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="3"
            android:background="@color/settingColor"
            android:onClick="onClickButtonSetting"
            android:padding="4dp"
            android:scaleType="fitEnd"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonMenuInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/infoColor"
            android:onClick="onClickButtonInfo"
            android:scaleType="fitCenter"
             />

        <ImageButton
            android:id="@+id/buttonMenuSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/searchColor"
            android:onClick="onClickButtonSearch"
            android:scaleType="fitCenter"
             />

        <ImageButton
            android:id="@+id/buttonMenuTimeTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/timetableColor"
            android:onClick="onClickButtonTimeTable"
            android:scaleType="fitCenter"
             />

        <ImageButton
            android:id="@+id/buttonMenuMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/mapColor"
            android:onClick="onClickButtonMap"
            android:scaleType="fitCenter"
             />

        <ImageButton
            android:id="@+id/buttonMenuHappi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/happiColor"
            android:onClick="onClickButtonHappi"
            android:scaleType="fitCenter"
             />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>